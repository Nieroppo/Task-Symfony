<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('assests/css/style.css')}}" type="text/css"/>
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% block header %}
            <div class="header">
                <h3><a href="{{path('tasks')}}"> Tasks Symfony</a></h3>
                <div id="nav">
                    <ul>
                        {% if app.user %}
                        <li><a href="{{path('myTasks')}}">My Tasks</a></li>
                        <li><a href="{{path('createtask')}}">Create Task </a></li>
                        {% endif %}
                        <div class="end-nav">
                            {% if app.user %}
                                
                                <li><a href="{{path('logout')}}">Log out</a></li>
                                <li><a href="{{path('myTasks')}}">{{app.user.name}} {{app.user.surname}}</a></li>
                            {% else %}
                                
                                <li><a href="{{path('register')}}">Sign up</a></li>
                                <li><a href="{{path('login')}}">Login</a></li>
                            {% endif %}
                        </div>
                    </ul>
                </div>
            </div>
            <div class="clearfix"></div>
            
            
        {% endblock%}
        <div class="content">
            {% block body %}{% endblock %}
        </div>
    </body>
</html>
